{
  "name": "taskmaster",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "vitest",
    "gen:auth": "bunx @better-auth/cli generate --output ./src/lib/db/schemas/auth.ts",
    "gen:db": "bun drizzle-kit generate",
    "gen": "bun run gen:auth && bun run gen:db",
    "migrate": "bun drizzle-kit migrate"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@lucide/svelte": "^0.539.0",
    "@neondatabase/serverless": "^1.0.1",
    "@skeletonlabs/skeleton": "^3.1.7",
    "@skeletonlabs/skeleton-svelte": "^1.3.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.46.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.0",
    "@types/pg": "^8.15.5",
    "better-auth": "^1.3.7",
    "bits-ui": "^2.9.4",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "jose": "^6.1.0",
    "mdsvex": "^0.12.6",
    "neonctl": "^2.15.0",
    "pg": "^8.16.3",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "runed": "^0.31.1",
    "shiki": "^3.10.0",
    "svelte": "^5.39.8",
    "svelte-check": "^4.0.0",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "typescript-svelte-plugin": "^0.3.50",
    "unique-names-generator": "^4.7.1",
    "vercel": "^44.7.3",
    "vite": "^7.0.4",
    "vitest": "^3.0.0",
    "zod": "3.25.76"
  },
  "packageManager": "bun@^1.2.0",
  "dependencies": {
    "neverthrow": "^8.2.0"
  }
}
